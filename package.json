{
  "name": "libxmljs",
  "author": "Marco Rogers",
  "contributors": [
    "Jeff Smick"
  ],
  "binary": {
        "module_name" : "xmljs",
        "module_path" : "./build/Release/",
        "host"        : "https://github.com",
        "remote_path" : "./libxmljs/libxmljs/releases/download/v{version}/",
        "package_name": "{node_abi}-{platform}-{arch}.tar.gz"
  },
  "description": "libxml bindings for v8 javascript engine",
  "version": "0.18.7",
  "scripts": {
    "install": "echo",
    "build": "node-gyp rebuild",
    "pre-gyp": "node-pre-gyp install --fallback-to-build --loglevel http",
    "electron": "node-gyp rebuild --runtime=electron --target=1.4.4 --disturl=https://atom.io/download/atom-shell --build-from-source",
    "test": "node --expose_gc ./node_modules/.bin/nodeunit test"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/sencha/libxmljs.git"
  },
  "bugs": {
    "url": "http://github.com/libxmljs/libxmljs/issues"
  },
  "main": "./index",
  "license": "MIT",
  "engines": {
    "node": ">=0.8.0"
  },
  "dependencies": {
    "node-pre-gyp": "~0.6.32",
    "bindings": "sencha/node-bindings#find-by-abi",
    "nan": "~2.5.0"
  },
  "devDependencies": {
    "nodeunit": "0.9.0"
  }
}
